<!DOCTYPE html>
<html>
  <head>
    <title>Grammable</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="flex-content-container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand">
        <%= link_to 'Home', root_path %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-expanded="fase" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-link">
            <%= link_to 'Menu', '#',
            class: 'nav-link btn btn-primary',
            style: 'background-color:#4c7725;color:#FFE;
            border:1px solid black;border-radius:20px;' %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Profile', '#',
              class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_user_session_path,
              method: :delete, class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path,
              class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path,
              class: 'nav-link',
              style: 'background-color:#4c7725;color:#FFE;
              border:1px solid black;border-radius:20px;' %>
            </li>
          <% end %>
        </ul>      
      </div>
    </nav>
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <%= yield %>
  </div>
  </body>
</html>
